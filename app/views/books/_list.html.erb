<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<div class="profile-container">
  <h3 class="profile-name">name<%= user.name %></h3>
  <h3 class="profile-introduction">introduction<%= @user.introduction %></h3>
  <% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user), class: "pull-right" %></p>
  <% end %>
</div>

<h2>New book</h2>
<% if book.errors.any? %>
  <div class="alert alert-warning">
  	<h3><%= book.errors.count %>件のerror</h3>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(book) do |f| %>
  <div class="field">
  <%= f.label :title, "Title" %><br>
 <%= f.text_field :title, {class: "book_title"} %>
</div>

<div class="field">
  <%= f.label :body, "Opinion" %><br>
  <%= f.text_area :body, {class: "book_body"} %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>