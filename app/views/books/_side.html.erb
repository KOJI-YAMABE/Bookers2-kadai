<h2>User info</h2>

<%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<div class="profile-container">
  <h3 class="profile-name">name<%= @user.name %></h3>
  <h3 class="profile-introduction">introduction<%= @user.introduction %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
  <% end %>
</div>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<h3><%= @book.errors.count %>件のerror</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book, url: books_path) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, {class: "from-control book_title"} %>
  <%= f.label :opinion %><br>
  <%= f.text_area :body, {class: "from-control book_body"} %>
  <%= f.submit 'Create Book' %>
<% end %>
