<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerror
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(@book, url: books_path) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, {class: "from-control book_title"} %><br>
  <%= f.label :opinion %><br>
  <%= f.text_area :body, {class: "from-control book_body"} %><br>
  <%= f.submit 'Create Book' %>
<% end %>
