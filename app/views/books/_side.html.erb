<h2>New book</h2>
<% if book.errors.any? %>
  <h3><%= book.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(book) do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title, class: " col-xs-12 from-control book_title" %>
</div>
<div class="field">
  <%= f.label :opinion %>
  <%= f.text_area :body, class: "col-xs-12 from-control book_body" %>
</div><br>
<div class="actions-create">
  <%= f.submit 'Create Book', class: "col-xs-12 btn btn-block btn-primary" %>
</div>
<% end %>