<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1>Editing Book</h1>

        <% if @book.errors.any? %>
  	        <h3><%= @book.errors.count %>件のerrors</h3>
             <ul>
               <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
        <% end %>
        <% end %>
      </ul>

    <%= form_for(@book) do |f| %>
       <div class="from-group">
         <%= f.label :title %><br>
         <%= f.text_field :title, autofocus: true, class: "col-xs-12 from-control book_title" %>
       </div>

       <div class="from-group">
         <%= f.label :opinion %><br>
         <%= f.text_area :body, autofocus: true, class: "col-xs-12 from-control book_body" %>
       </div>

       <div class="actions">
         <%= f.submit 'Update Book', class: "col-xs-12 btn btn-primary" %>
       </div>
    <% end %>

      <%= link_to "Show", book_path(@book) %>
      <%= "|" %>
      <%= link_to "Back", books_path %>

    </div>
  </div>
</div>
