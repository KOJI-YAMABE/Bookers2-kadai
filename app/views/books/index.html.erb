<p id="notice"></p>

<%= render 'books/side', books: @books %>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :image, :fill, 50, 50, format:'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			<td><%= link_to book.title, book %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
