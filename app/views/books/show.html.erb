<%= render 'books/list', books: @books %>

<p id="notice">
 <%= notice %>
</p>

<h2>Book detail</h2>
<table>
	<thead>
		<tr>
			<th></th>
			<th></th>
			<th colspan="9"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= link_to user.name, new_book_path %></td>
			<td><%= link_to book.title, book_path(@book) %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Edit", edit_book_path(@book) %></td>
			<td><%= link_to "Destroy", books_path(book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
		</tr>
		<% end %>
	</tbody>
</table>