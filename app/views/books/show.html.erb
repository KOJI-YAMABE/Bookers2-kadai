<p id="notice"><%= notice %></p>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
         <%= render 'users/info', user: @book.user %>
         <%= render 'books/side', book: @bookpost, user: current_user %>
        </div>
       <div class="col-xs-9">
    	<h2>Book detail</h2>
         <table class="table">
	      <thead>
		    <tr>
			 <th></th>
			 <th></th>
			 <th colspan="9"></th>
		    </tr>
	      </thead>
	      <tbody>
		    <tr>
			  <td>
			  	<%= link_to user_path(@book.user) do %>
			  	  <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format:'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg" %>
			  	<% end %>
			  	<br>
				<%= link_to @user.name, user_path(@user) %>
			  </td>
			  <td><%= link_to @book.title, book_path %></td>
			  <td><%= @book.body %></td>

              <% if current_user == @book.user %>
			   <td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
			   <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
		      <% end %>
		    </tr>
	      </tbody>
         </table>
       </div>
    </div>
</div>
