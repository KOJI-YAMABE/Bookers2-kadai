<h2>User info</h2>

<table class="table">
  <tbody>
    <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg" %></tr>
    <tr>
       <th>name</th>
       <th><%= user.name %></th>
    </tr>
    <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

    <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
