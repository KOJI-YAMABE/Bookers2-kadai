<div class="container">
  <div class="row">
    <div class="col-md-4">
<h2>User info</h2>
<% if @user.errors.any? %>
    <h3 class="text-danger"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(@user) do |f| %>
<p class="field">
  <%= f.label :name %>
 <%= f.text_field :name %>
</p>

<p class="field">
  <%= f.label :image %>
  <%= f.attachment_field :profile_image %>
</p>

<p class="field">
  <%= f.label :introduction %>
  <%= f.text_area :introduction %>
</p>

<p class="actions">
  <%= f.submit 'Update User' %>
</p>
<% end %>

</div>
</div>
</div>
