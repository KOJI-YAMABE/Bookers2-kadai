<p id="notice"></p>

<%= render 'users/usersside', users: @users %>

<h1>Users</h1>
<table>
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
		   <td><%= attachment_image_tag user, :image, :fill, 50, 50, format:'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
		   <td><%= user.name %></td>
		   <td><%= link_to "Show" user_path(user.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
