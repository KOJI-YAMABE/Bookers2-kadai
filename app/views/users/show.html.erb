<%= render 'users/info', user: @user %>
<%= render 'books/side', book: @book, user: current_user %>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image_id, :fill, 50, 50, format:'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			<td><%= link_to book.title, book_path(@book) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>